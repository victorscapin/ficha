<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="Belagricola.Ficha.controller.TipoSilo" xmlns="sap.m">
	<Page showHeader="true" title="GerÃªncia de Tipos de Silos" showFooter="true" showNavButton="true" navButtonPress="_onPageNavButtonPress">
		<content>
			<Table id="grdTipoSilo" mode="SingleSelectLeft"
				items="{ path : '/TIPOSILODATA', sorter: { path: 'NOME' }, filters : [ { path : 'REMOVIDO', operator : 'EQ', value1 : 0 } ] }">
				<headerToolbar>
					<Toolbar>
						<Title text="Tipos de Silos"/>
						<ToolbarSpacer/>
						<Button text="Novo" press="onNewPress"/>
						<Button text="Remover" press="onDeletePress"/>
						<SearchField id="txtSearch" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id="colNome">
						<Text text="Nome do Tipo de Silo"/>
					</Column>
					<Column id="colUsuario">
						<Text text="Usuario"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="clicaSilo">
						<cells>
							<ObjectIdentifier title="{NOME}"/>
							<ObjectIdentifier title="{IDUSUARIO}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>