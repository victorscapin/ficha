
<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	controllerName="Belagricola.Ficha.controller.AreacaoData">
	<Page title="Gerência de Areações" showNavButton="true" navButtonPress="onNavBack">
		<f:Form id="form" editable="true">
			<f:title>
				<core:Title text="Areação"/>
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
					emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:FormElement label="Data Sistema">
						<f:fields>
							<DatePicker id="dataCadastro" dateValue="{areacao>/DATACADASTRO}" required="true" editable="false"></DatePicker>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Responsável">
						<f:fields>
							<Input id="usuario" value="{ path: 'areacao>/IDUSUARIO', type: 'sap.ui.model.type.String'}" required="true" editable="false"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Filial">
						<f:fields required="true">
							<Select id="filial" selectedKey="{ path: 'areacao>/IDFILIAL'}" items="{/FILIALDATA}" enabled="{edit>/isEdit}">
								<items>
									<core:Item text="{NOME}" key="{ID}"/>
								</items>
							</Select>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Silos">
						<f:fields required="true">
							<Select id="silos" selectedKey="{ path: 'areacao>/IDSILO'}" items="{/SILODATA}" enabled="{edit>/isEdit}">
								<items>
									<core:Item text="{NOME}" key="{ID}"/>
								</items>
							</Select>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Data Operação">
						<f:fields>
							<DatePicker id="dataOperacao" dateValue="{areacao>/DATAOPERACAO}" required="true"
								editable="{edit>/isEdit}"></DatePicker>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="N° de Hr./Dia">
						<f:fields>
							<Input value="{ path: 'areacao>/HRDIA', type: 'sap.ui.model.type.Integer', constraints: { maxLength: 50}}" id="hrDia" required="true"
								editable="{edit>/isEdit}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Temperatura Ambiente (C)">
						<f:fields>
							<Input value="{ path: 'areacao>/TEMPERATURAAMBIENTE', type: 'sap.ui.model.type.Float', constraints: { maxLength: 50}}"
								id="temperaturaAmbiente" required="true" editable="{edit>/isEdit}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Umidade Relatíva (%)">
						<f:fields>
							<Input value="{ path: 'areacao>/UMIDADERELATIVA', type: 'sap.ui.model.type.Float', constraints: { maxLength: 50}}" id="umidadeRelativa"
								required="true" editable="{edit>/isEdit}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Observação">
						<f:fields>
							<TextArea value="{ path: 'areacao>/OBSERVACAO', type: 'sap.ui.model.type.String', constraints: { maxLength: 200 } }" id="observacao"
								editable="{edit>/isEdit}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="">
						<f:fields>
							<Button id="btnSalvar" text="Salvar" press="onSave" visible="{edit>/isEdit}"/>
						</f:fields>
					</f:FormElement>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</Page>
</mvc:View>