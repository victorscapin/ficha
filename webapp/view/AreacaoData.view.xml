<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	controllerName="Belagricola.Ficha.controller.AreacaoData">
	<Page title="Gerência de Areações" showNavButton="true" navButtonPress="onNavBack">
		<f:Form id="form" editable="true">
			<f:title>
				<core:Title text="Areação"/>
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
					emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:FormElement label="Nome da Areação">
						<f:fields>
							<Input value="{ path: 'areacao>/NOME', type: 'sap.ui.model.type.String', constraints: { maxLength: 50}}" id="nome" required="true"
								editable="{edit>/isEdit}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="">
						<f:fields>
							<Button id="btnSalvar" text="Salvar" press="onSave" visible="{edit>/isEdit}"/>
						</f:fields>
					</f:FormElement>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</Page>
</mvc:View>