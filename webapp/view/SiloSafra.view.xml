<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="Belagricola.Ficha.controller.SiloSafra">
	<Page title="Vinculo Silo Safra" showFooter="true" showHeader="true" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<f:Form id="form" editable="true">
				<f:title>
					<core:Title text="Silo x Safra"/>
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
						emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="Safra">
								<f:fields>
									<Select id="safra" selectedKey="{ path: 'safraData>/IDSAFRA' }">
										<items>
											<core:Item text="Safra 2" key="1"/>
										</items>
									</Select>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Grão">
								<f:fields>
									<Select id="grao" selectedKey="{ path: 'safraData>/IDGRAO' }">
										<items>
											<core:Item text="Grão 1" key="1"/>
										</items>
									</Select>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Data Inicio Safra">
								<f:fields>
									<DatePicker id="dataIni" value="{path: 'safraData>/DATAINI', type: 'sap.ui.type.Date'}"></DatePicker>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Data Final Safra">
								<f:fields>
									<DatePicker id="dataFim" value="{path: 'safraData>/DATAFIM', type: 'sap.ui.type.Date'}"></DatePicker>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Data Termino Enchimento">
								<f:fields>
									<DatePicker id="dataEnch" value="{path: 'safraData>/DATAENCH', type: 'sap.ui.type.Date'}">
									</DatePicker>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Observação">
								<f:fields>
									<TextArea id="observacao" value="{path: 'safraData>/OBSERVACAO'}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="">
								<f:fields>
									<Button text="Salvar" press="onSalvar"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
	</Page>
</mvc:View>